<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="15dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/tv_list"
        android:layout_marginTop="5dp"
        android:background="@color/border" />

    <TextView
        android:id="@+id/tv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/iv_menu"
        android:layout_toLeftOf="@+id/iv_menu"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="9dp"
        android:paddingEnd="9dp"
        android:paddingRight="9dp"
        android:paddingBottom="9dp"
        android:text="ListName"
        android:textColor="@color/list_name"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="List Options Button"
        android:padding="10dp"
        android:src="@drawable/ic_dots" />

</RelativeLayout>